// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./kudhung.db"
}

generator client {
  provider = "prisma-client-js"
}

model Produk {
  id              Int      @id @default(autoincrement())
  jenisProduk     String
  hargaProduk     String
  deskripsiProduk String
  labelProduk     String
  fotoProduk      Gambarproduk[]
  gambarProduk    String
  kategori        Kategori @relation(fields: [kategoriProduk], references: [idKtg])
  kategoriProduk  Int
  warnaProduk     Warna[]  @relation(references: [idColor])
}

model Promo {
  idPromo        Int      @id @default(autoincrement())
  judulPromo     String
  hargaPromo     String
  deskripsiPromo String
  periodePromo   String
  fotoPromo      Gambarpromo[]
  gambarPromo    String
  warnaPromo     Warna[]
}

model Kategori {
  idKtg    Int      @id @default(autoincrement())
  jenisKtg String
  namaKtg  Produk[]
}

model Gambarproduk {
  idGmbrproduk     Int    @id @default(autoincrement())
  urlGmbrproduk    String
  gmbrProduk Produk @relation(fields: [idProduk], references: [id])
  idProduk   Int
}
model Gambarpromo {
  idGmbrpromo     Int    @id @default(autoincrement())
  urlGmbrpromo    String
  gmbrPromo  Promo  @relation(fields: [promoId], references: [idPromo])
  promoId    Int
}

model Warna {
  idColor     Int      @id @default(autoincrement())
  jenisColor  String
  colorProduk Produk[] @relation(references: [id])
  colorPromo  Promo[]  @relation(references: [idPromo])
}
